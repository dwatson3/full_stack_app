<!-- This is my BREWERIES Show Page -->
<% include partials/header %>

<script type="text/javascript" src="/javascript/search.js"></script>
	<h3 class="return">Return Home</h3>
	<div class="heading">
		<h2>Find A Local Brewery</h2>
		<h3>Location Results:</h3>
	</div>
	<!-- <div id="map-canvas"></div> -->
	
	<div class="resultsGoHere">
		<% brewData.data.forEach(function (brew) { %>
			<p> 
				<div class="brewery-image">
					<% if (brew.brewery && brew.brewery.images) { %>
						<img src="<%= brew.brewery.images.medium %>" alt=""></img> <br>
				</div>

				<div class="info">
					<%= brew.name %> <br> 
					<%= brew.streetAddress %> <br> 
					<%= brew.locality %> <br>
					<%= brew.region %> <br>
					<%= brew.hoursOfOperation %> <br>
					<% if (brew.website) { %>
					<a href="<%= brew.website %>">Visit Website</a> <br>
					<%= brew.phone %> <br>
				</div>
			</p>

		<% } %>
		<% }; %>
		<% }); %>

	</div>

<% include partials/footer %>