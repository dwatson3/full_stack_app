<% include ../partials/header %>

<h2>This is my main search page for Brewery Finder</h2>

<h4>Logo and/or Map should be here, and map should appear on the SHOW page</h4>

<form action="/breweries/index" method="GET">

<div class="search-fields">
	<div class="locate-beer">
		<label for="locate">Location:</label>
			<input type="text" class="searchin" id="locate" name="locate"style="width: 250px">
			<!-- placeholder="Enter a City & State, Address, or Zip Code" -->
			<button type="submit" class="locate">Find Breweries</button>
	</div>

	<div class="brewery-name">
		<label for="breweryName">Find Brewery By Name:</label>
			<input type="text" class="searchin" id="breweryName" name="breweryName" style="width: 140px" placeholder="Enter a Brewery Name">
			<button type="submit" class="brew">Find Breweries</button>
	</div>
<!-- </div> -->

	<div class="search-beer">
		<label for="beerCurious">Curious about a beer?</label>
			<input type="text" class="searchin" id="beerCurious" name="beerCurious" placeholder="Enter a Beer Here">
			<button type="submit" class="learn-more">Find A Beer</button>
	</div>

	</form>

	<div class="page-links">
		<a href="/login">Login</a>
		<br>
		<a href="/signup" class="new-user">New user? Signup here</a>
	</div>

	<ul class="form">
		<div class="form-group">
			<li>Location:</li>
		</div>

		<div class="form-group">
			<li>Brewery:</li>
		</div>

		<div class="form-group">
			<li>Beer:</li>
		</div>


	<div class="display-results"></div>
</div>	

