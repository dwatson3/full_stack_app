<!-- This is the SIGNUP Users Page! -->

<% include ../partials/header %>

<h3>Sign up for Brew It</h3>

	<form action="/signup" method="POST">

		<div class="signup-form">
			<label for="user">Choose a Username:</label>
			<input type="text" name="user[username]" id="user" placeholder="Enter username" autofocus>
		</div>

		<div class="signup-form">
			<label for="password">Password:</label>
			<input type="password" name="user[password]" id="password" placeholder="Enter password" autofocus>
		</div>

		<input type="submit" value="Sign up">
		<a href="/login">Already Have An Account? Login in here</a>
	</form>

<a href="/">Return Home</a>
	
